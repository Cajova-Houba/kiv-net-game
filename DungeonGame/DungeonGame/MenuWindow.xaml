<Window x:Class="DungeonGame.MenuWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DungeonGame"
        mc:Ignorable="d"
        Title="Vítejte v dungeonu!" Height="400" Width="300" 
        ResizeMode="NoResize">
    <StackPanel Orientation="Vertical" Margin="75,50,75,50">
        <Label Content="Dungeon" HorizontalAlignment="Center"/>
        <Button Name="newGameBtn" Content="Nová hra" Click="newGameBtn_Click" Margin="0,5"/>
        <Button Name="importMapsBtn" Content="Import map" IsEnabled="False" Margin="0,5"/>
        <Button Name="mapeditorBtn" Content="Editor" Margin="0,5" Click="EditorBtnClick"/>
        <Button Name="exitBtn" Content="Ukončit" Margin="0,5" Click="OnExitBtnClick"/>
    </StackPanel>
</Window>
