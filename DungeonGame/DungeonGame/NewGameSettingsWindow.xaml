<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DungeonGame"
        xmlns:ViewModel="clr-namespace:DungeonGame.ViewModel" x:Class="DungeonGame.NewGameSettingsWindow"
        mc:Ignorable="d"
        Title="New game settings" Height="360" Width="350"
        ResizeMode="NoResize"
    >

    <Window.DataContext>
        <ViewModel:NewGameSettingsModel/>
    </Window.DataContext>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="170"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="45"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="2" Text="Nastavení nové hry. Seed je optimální volba, pokud nechcete použít vlastní, nechte -1. Kromě jména hráče a seedu musí být všechny hodnoty přirozená čísla." Margin="5" TextWrapping="Wrap"/>

        <Label Content="Šířka mapy" Grid.Column="0" Grid.Row="1"/>
        <TextBox x:Name="tbMapWidth" Grid.Column="1" Grid.Row="1" Text="{Binding MapWidth}" Margin="5"/>

        <Label Content="Výška mapy" Grid.Column="0" Grid.Row="2"/>
        <TextBox x:Name="tbMapHeight" Grid.Column="1" Grid.Row="2" Text="{Binding MapHeight}" Margin="5" />

        <Label Content="Seed pro generování mapy" Grid.Column="0" Grid.Row="3"/>
        <TextBox x:Name="tbMapSeed" Grid.Column="1" Grid.Row="3" Text="{Binding MapSeed}" Margin="5" />

        <Label Content="Počet protihráčů" Grid.Column="0" Grid.Row="4"/>
        <TextBox x:Name="tbAiCount" Grid.Column="1" Grid.Row="4" Text="{Binding AiCount}" Margin="5" />

        <Label Content="Počet monster" Grid.Column="0" Grid.Row="5"/>
        <TextBox x:Name="tbMonsterCount" Grid.Column="1" Grid.Row="5" Text="{Binding MonsterCount}" Margin="5" />

        <Label Content="Počet předmětů na mapě" Grid.Column="0" Grid.Row="6"/>
        <ComboBox x:Name="cbItemDensity" Grid.Column="1" Grid.Row="6" ItemsSource="{Binding ItemsDensities}" SelectedItem="{Binding SelectedDensity}" Margin="5,0,5,0">
            <ComboBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <Label Content="{Binding Name}"/>
                    </StackPanel>
                </DataTemplate>
            </ComboBox.ItemTemplate>
        </ComboBox>

        <Label Content="Jméno hráče" Grid.Column="0" Grid.Row="7"/>
        <TextBox x:Name="tbPlayerName" Grid.Column="1" Grid.Row="7" Text="{Binding PlayerName}" Margin="5"/>

        <Button Content="Zpět" Grid.Column="0" Grid.Row="8" Margin="10" Click="BackBtnClick"/>
        <Button Content="Start" Grid.Column="1" Grid.Row="8" Click="StartGameBtnClick" Margin="10,10,10,10"/>
    </Grid>
</Window>
